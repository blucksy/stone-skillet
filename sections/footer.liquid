<div class="flex flex-col justify-between !gap-y-16 sm:gap-y-[144px] px-4 sm:px-9 p-9 bg-[#C5E0F2]">
  <div class="!gap-y-16 sm:!gap-y-8 main-grid  " id="footer">
    {% comment %} MENUS {% endcomment %}
    {% comment %} menu with drop down {% endcomment %}
    {% for link in linklists['footer-1'].links %}
      <div class="col-span-6 sm:col-span-3 flex flex-col gap-[12px]">
        {% if link.links.size > 0 %}
          <ul class="flex flex-col gap-[8px]">
            {% for sublink in link.links %}
              <li>
                <a href="{{ sublink.url }}" class="hover:underline text-link">{{ sublink.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <a href="{{ link.url }}" class="hover:underline">{{ link.title }}</a>
        {% endif %}
      </div>
    {% endfor %}
    <div class="col-span-12 sm:col-span-6">
      {% comment %} section subscribe module {% endcomment %}
      {% render 'subscribe-module' %}
    </div>
  </div>
  <div class="w-full justify-between flex flex-row text-xs">
    <p class="italic">196 Quincy St, Boston, MA 02121</p>
    <a
      class="italic"
      href="https://taw.vision/"
      target="_blank"
      rel="noopener noreferrer"
    >
      Site Credit
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  // array of socials arrays of outbound links
  "settings": [
    {
      "type": "text",
      "id": "socials",
      "label": "Socials"
    },
    {
      "type": "text",
      "id": "outbound_links",
      "label": "Outbound Links"
    }
  ]
}
{% endschema %}
