<div class="h-[90svh] relative ">
  {% render 'image', image: section.settings.quote_image, class: 'h-full w-full object-cover' %}
  {% if section.settings.caption %}
    <div class="flex content-center absolute w-full h-full left-0 top-0 px-page main-grid">
      <p class="my-auto col-span-full sm:col-span-8  sm:col-start-2 md:col-span-10 md:col-start-2 text-white mx-auto text-center flex text-heading sm:!text-[54px]  ">
        {{ section.settings.caption }}
      </p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "quote",
  "settings": [
    {
      "type": "image_picker",
      "id": "quote_image",
      "label": "Quote Image"
    },

    {
      "type": "textarea",
      "id": "caption",
      "label": "Caption"
    }
  ],
  "presets": [
    {
      "name": "Quote",
      "category": "Custom"
    }
  ]
}
{% endschema %}
