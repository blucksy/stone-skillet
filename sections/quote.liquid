<div class="h-[90vh] relative ">
  <img
    src="{{ section.settings.quote_image | img_url: 'master' }}"
    alt="Quote Image"
    class="h-full w-full object-cover"
  >
  {% if section.settings.caption %}
    <p class="my-auto mx-auto top-0 justify-center text-center bottom-0 h-min flex text-heading  ">
      {{ section.settings.caption }}
    </p>
  {% endif %}
</div>

{% schema %}
{
  "name": "quote",
  "settings": [
    {
      "type": "image_picker",
      "id": "quote_image",
      "label": "Quote Image"
    },

    {
      "type": "textarea",
      "id": "caption",
      "label": "Caption"
    }
  ],
  "presets": [
    {
      "name": "Quote",
      "category": "Custom"
    }
  ]
}
{% endschema %}
